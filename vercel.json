{
    "builds": [
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "public" } 
        },
        {
            "src": "index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.py"
        }
    ]
}